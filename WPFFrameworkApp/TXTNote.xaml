<Window x:Class="WPFFrameworkApp.TXTNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFrameworkApp"
        mc:Ignorable="d" Icon="NoteImages/gennote.png"
        Title="NoteApp" Height="450" Width="298">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" x:Name="fileMenubar">
            <MenuItem Header="_File" Height="20">
                <MenuItem x:Name="filemenu" Header="_New Note" Click="NewFile">
                    <MenuItem.Icon>
                        <Image Source="NoteImages/noteadd.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="openmenu" Header="_Open Note" Click="OpenFile">
                    <MenuItem.Icon>
                        <Image Source="NoteImages/noteopen.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="save" Header="_Save" Click="SaveFile">
                    <MenuItem.Icon>
                        <Image Source="NoteImages/Save.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="saveasmenu" Header="Save _As" Click="SaveAsFile">
                    <MenuItem.Icon>
                        <Image Source="NoteImages/Saveas.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="copy" Header="_Copy" Click="CopyFile">
                    <MenuItem.Icon>
                        <Image Source="NoteImages/notecopy.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="move" Header="_Move" Click="MoveFile">
                    <MenuItem.Icon>
                        <Image Source="NoteImages/move.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="rename" Header="Rename" Click="RenameFile">
                    <MenuItem.Icon>
                        <Image Source="/NoteImages/rename.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="delete" Header="_Delete" Click="DeleteFile">
                    <MenuItem.Icon>
                        <Image Source="NoteImages/notedelete.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem x:Name="aboutmenu" Header="About GenNote" Click="AboutPage">
                    <MenuItem.Icon>
                        <Image Source="/NoteImages/gennote.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="note" AcceptsReturn="True"/>
        </ScrollViewer>
    </Grid>
</Window>
