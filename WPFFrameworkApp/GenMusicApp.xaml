<Window x:Class="WPFFrameworkApp.GenMusicApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFrameworkApp"
        mc:Ignorable="d" Background="#424242" Icon="/DesktopImages/genmusic32x32.png"
        Title="GenMusicApp" Height="340" Width="460">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="2" Background="#2b2b2b" Foreground="White">
            <MenuItem Header="_Audio" Background="#2b2b2b" Width="50">
                <MenuItem Header="_Add Audio" Background="#2b2b2b" Click="AddAudio" BorderThickness="0">
                    <MenuItem.Icon>
                        <Image Source="/MusicImages/soundadd.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Move Audio" Background="#2b2b2b" Click="MoveAudio" BorderThickness="0">
                    <MenuItem.Icon>
                        <Image Source="/NoteImages/move.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Copy Audio" Background="#2b2b2b" Click="CopyAudio" BorderThickness="0">
                    <MenuItem.Icon>
                        <Image Source="/MusicImages/soundbutcopy.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Delete Audio" Background="#2b2b2b" Click="DeleteAudio" BorderThickness="0">
                    <MenuItem.Icon>
                        <Image Source="/MusicImages/sounddelete.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Reload GenMusic" Background="#2b2b2b" Click="ReloadMusicApp_Wanted" BorderThickness="0">
                    <MenuItem.Icon>
                        <Image Source="/DesktopImages/refresh.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="About GenMusic" Background="#2b2b2b" Click="AboutGenmusicPage_Wanted" BorderThickness="0">
                    <MenuItem.Icon>
                        <Image Source="/DesktopImages/genmusic32x32.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <ListBox x:Name="listbox" Grid.Row="1" Grid.Column="0" Background="Black" BorderThickness="0" Foreground="White" Grid.RowSpan="4" Grid.ColumnSpan="2" SelectionChanged="ListBox_SelectionChanged"/>
        <StackPanel x:Name="currentPanel" Grid.Row="1" Grid.Column="1" Visibility="Collapsed" Background="#3d2e26">
            <Image Source="DesktopImages/Genmusic.png" Width="120" VerticalAlignment="Top"/>
            <TextBlock x:Name="currentMusic" Foreground="White" FontWeight="Bold" Margin="0, 15, 0, 0"  HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel x:Name="musicSliderPanel" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Slider x:Name="slider" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed" IsSnapToTickEnabled="false" PreviewMouseUp="SliderPositionChanged"/>
            <TextBlock x:Name="remainedTime" Text="00:00" HorizontalAlignment="Right" Visibility="Collapsed" VerticalAlignment="Center" Margin="8, 0, 0, 0" Foreground="white"/>
        </StackPanel>
        <StackPanel x:Name="musicPanel1" Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed">
            <Button x:Name="startButton" Content="start" Width="50" Background="#2e2e2e" Foreground="white" BorderThickness="0" Margin="0, 2, 10, 2" Click="PlayMusic"/>
            <Button x:Name="stopButton" Content="stop" Width="50" Background="#2e2e2e" Foreground="white" BorderThickness="0" Margin="0, 2, 10, 2" Click="StopMusic"/>
            <Button x:Name="restartButton" Content="Restart" Width="50" Background="#2e2e2e" Foreground="white" BorderThickness="0" Margin="0, 2, 0, 2" Click="RestartMusic"/>
        </StackPanel>
        <StackPanel x:Name="musicPanel2" Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed">
            <Button x:Name="back" Content="5s Back" Width="57" Background="#2e2e2e" Foreground="white" BorderThickness="0" Margin="0, 2, 10, 2" Click="MusicBack"/>
            <Button x:Name="front" Content="5s Front" Width="57" Background="#2e2e2e" Foreground="white" BorderThickness="0"  Margin="0, 2, 0, 2" Click="MusicFront"/>
        </StackPanel>
        <Button x:Name="reloadNeeded" Grid.Row="3" Grid.ColumnSpan="2" Width="180" HorizontalAlignment="Center" Visibility="Collapsed" Background="#262626" BorderThickness="0" Foreground="white" Click="ReloadDesktopNeeded">
            <StackPanel Orientation="Horizontal">
                <Image  Source="/DesktopImages/refresh.png" Width="20" VerticalAlignment="Center"/>
                <TextBlock Text="  Reload desktop needed" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
