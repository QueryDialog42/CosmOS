<Window x:Class="WPFFrameworkApp2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFrameworkApp2" Icon="/DesktopImages/paperplane2.png"
        xmlns:UserControl="clr-namespace:WPFFrameworkApp2.UserControls"
        Closing="Window_Closing" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Background="DarkGray" ResizeMode="NoResize"
        Title="LoginWindow" Height="520" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="Gray" Margin="0,62,0,30"/>
        <Image Source="/DesktopImages/paperplane128x128.png"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center" Height="160" Width="156"
               Margin="0, 0, 20, 0"
               />
        <TextBlock Grid.Row="1"
                   x:Name="time"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="40"
                   Foreground="LightGray"/>
        
        <TextBlock Grid.Row="2"
                   x:Name="date"
                   Foreground="Gray"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="15"
                   />

        <UserControl:TextBoxControls Grid.Row="3"
                                     HorizontalAlignment="Center"
                                     Width="300"
                                     Height="50"
                                     PlaceHolder=" Username here"/>

        <Rectangle Grid.Row="4"
                   Width="300"
                   Height="50"
                   Fill="LightGray"
                   />
        <TextBlock Grid.Row="4"
                 x:Name="passwordPlaceholder"
                 Foreground="Gray"
                 Background="Transparent"
                 VerticalAlignment="Center"
                 Margin="50, 0, 0, 0"
                 FontSize="20"
                 Text = " Password here"
             >
        </TextBlock>
        <PasswordBox Grid.Row="4"
                     x:Name="passwordBox"
                     HorizontalAlignment="Center"
                     VerticalContentAlignment="Center"
                     Width="300"
                     Height="50"
                     Background="Transparent"
                     GotFocus="PasswordBox_GotFocus"
                     LostFocus="PasswordBox_LostFocus"
        />

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <UserControl:HoverableButtonControls
                Height="20"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0, 0, 20, 0"
                UnHoveredText="  Not Registered?  "
                HoveredText="  Click To Register  " Width="Auto"
                PreviewMouseLeftButtonUp="Register_ButtonClicked"
                />
            <Button Grid.Column="1" Height="20"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="20, 0, 0, 0"
                    Content="Login"
                    Width="110"
                    Click="Button_Click"/>
        </Grid>
        <TextBlock Grid.Row="6" Foreground="DarkRed" 
           Text="Error massge if you need"
           FontSize="20"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
    </Grid>
</Window>
