<Window x:Class="WPFFrameworkApp2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFrameworkApp2" Icon="/DesktopImages/paperplane2.png"
        xmlns:UserControl="clr-namespace:WPFFrameworkApp2.UserControls"
        mc:Ignorable="d" Background="DarkGray" ResizeMode="NoResize"
        Title="LoginWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="Gray" Margin="0,62,0,30"/>
        <Image Source="/DesktopImages/paperplane128x128.png"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center" Height="160" Width="156"
               Margin="0, 0, 20, 0"
               />

        <UserControl:TextBoxControls Grid.Row="1"
                                     HorizontalAlignment="Center"
                                     Width="300"
                                     Height="50"
                                     PlaceHolder="  Username here"/>
        <UserControl:TextBoxControls Grid.Row="2"
                                     HorizontalAlignment="Center"
                                     Width="300"
                                     Height="50"
                                     PlaceHolder="  Password here"
        />

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <UserControl:HoverableButtonControls
                Height="20"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Top"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0, 0, 20, 0"
                UnHoveredText="  Not Registered?  "
                HoveredText="  Click To Register  " Width="Auto"
                PreviewMouseLeftButtonUp="Register_ButtonClicked"
                />
            <Button Grid.Column="1" Height="20"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="20, 0, 0, 0"
                    Content="Login"
                    Width="110"
                    Click="Button_Click"/>
        </Grid>
        <TextBlock Grid.Row="4" Foreground="DarkRed" 
           Text="Error massge if you need"
           FontSize="20"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>
    </Grid>
</Window>
