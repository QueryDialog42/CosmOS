<UserControl x:Class="WPFFrameworkApp2.UserControls.TextBoxControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFFrameworkApp2.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="400">
    <Grid Background="LightGray" >
        <TextBlock x:Name="usertextblock" Text="{Binding PlaceHolder}" Foreground="Gray" VerticalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="usertextbox" Background="Transparent"
                 VerticalContentAlignment="Center"
                 FontSize="20"
                 TextChanged="TextBox_TextChanged"/>
    </Grid>
</UserControl>
