<Window x:Class="WPFFrameworkApp2.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFrameworkApp2" Icon="/DesktopImages/paperplane2.png"
        xmlns:UserControl="clr-namespace:WPFFrameworkApp2.UserControls"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Background="DarkGray" ResizeMode="NoResize"
        Title="RegisterWindow" Height="470" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Source="/DesktopImages/useradd.png"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Center" Height="160" Width="156"
           />

        <UserControl:TextBoxControls Grid.Row="1"
                                 HorizontalAlignment="Center"
                                 Width="300"
                                 Height="50"
                                 PlaceHolder="  Create An Username"/>
        <UserControl:TextBoxControls Grid.Row="2"
                                 HorizontalAlignment="Center"
                                     VerticalAlignment="Top"
                                 Width="300"
                                 Height="50"
                                 PlaceHolder="  Create A Password"
        />

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <UserControl:HoverableButtonControls
            Height="20"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Top"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0, 0, 20, 0"
            UnHoveredText="  Have An Account?  "
            HoveredText="  Click To Login  " Width="Auto"
            PreviewMouseLeftButtonUp="HaveAnAccount_ButtonClicked"
            />
            <Button Grid.Column="1" Height="20"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="20, 0, 0, 0"
                Content="Register"
                Width="110"
                Click="Button_Click"/>
        </Grid>
        <TextBlock Grid.Row="4" Foreground="DarkRed" 
                   Text="Error massge if you need"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Grid>
</Window>
